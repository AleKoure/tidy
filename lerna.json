{
  "packages": [
    "packages/*",
    "website"
  ],
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "publish": {
      "changelog": false,
      "conventionalCommits": true,
      "message": "chore(release): publish %v",
      "push": false
    },
    "version": {
      "changelog": false,
      "conventionalCommits": true,
      "message": "chore(release): publish %v",
      "push": false
    },
    "changelog": {
      "repo": "pbeshai/tidy",
      "cacheDir": ".changelog",
      "labels": {
        "breaking": "BREAKING CHANGE",
        "feature": "FEATURE",
        "bug": "BUGFIX",
        "docs": "DOCUMENTATION"
      }
    }
  }
}