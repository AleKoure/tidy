{
  "compilerOptions": {
    /* added es2019 for .flatMap */
    "lib": ["es2019"], 
    "moduleResolution": "node",
    "outDir": "lib",
    "rootDir": "src",
    "target": "esnext",
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "pretty": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "esm",
    "test",
    "website/**/*.ts"
  ]
}